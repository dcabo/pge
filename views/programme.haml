%html
	%body
		-if not @entity.nil? and not @section.nil?
			%h2 #{@section.description}
			%h3 #{@entity.description}
			%h4 #{@programme.description}
		-else
			%h2 #{@programme.description}
		
		%h4 Total: #{@programme.amount.to_digits}
		
		%table
			-@expenses.each do |e|
				%tr
					%td #{e.concept}
					%td #{e.description}
					%td #{e.amount.to_digits}
